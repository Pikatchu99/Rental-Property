<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>Rent:</strong>
  <%= @property.rent %>
</p>

<p>
  <strong>Building age:</strong>
  <%= @property.building_age %>
</p>

<p>
  <strong>Address:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>Remark:</strong>
  <%= @property.remark %>
</p>

<hr />

<% i = 0 %>
<% @property.nearest_stations.each do |x| %>
<% if x.name_of_railway != "" && x.station_name != "" && x.how_many_minutes_walk != "" %>
  <h1> Nearest station<%= i+1 %>
  <p>
    <strong>Name of railway:</strong>
    <%= x.name_of_railway %>
  </p>

  <p>
    <strong>Station name:</strong>
    <%= x.station_name %>
  </p>

  <p>
    <strong>How many minutes walk:</strong>
    <%= x.how_many_minutes_walk %>
  </p>
  <% i += 1 %>
  <% end %>
<% end %>

